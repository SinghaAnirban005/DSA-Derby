generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @unique   @default(uuid())
  type          UserCategory
  fullName      String
  username      String    @unique
  email         String    @unique
  password      String    @unique
  submissions   Submission[]
}

model Problem {
  id            String    @unique   @default(uuid())
  title         String
  description   String
  testCases     TestCase[]
  submissions   Submission[]
}

model TestCase {
  id              String   @unique() @default(uuid())
  input           String
  expectedOutput  String
  problem         Problem   @relation(fields: [problemId], references: [id])
  problemId       String
}

model Submission {
  id          String      @unique   @default(uuid())
  code        String
  language    Language
  problem_id  String
  user_id     String
  verdict     Result

  user        User    @relation(fields: [user_id], references: [id])
  problem     Problem @relation(fields: [problem_id], references: [id])

  createdAt   DateTime   @default(now())
}


enum Result { 
  Passed
  Failed 
}

enum Language {
  Java
  Python
  Javascript
}

enum UserCategory {
  Admin
  nonAdmin
}